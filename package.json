{
  "name": "local-microblogging-client",
  "version": "2.5.0",
  "description": "Local Microblogging Frontend Client",
  "main": "src/entry-client.jsx",
  "homepage": "https://pure-js.github.io/local-microblogging-client/",
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "dev": "vite serve",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --outDir dist/server --ssr src/entry-server.jsx",
    "generate": "vite build --outDir dist/static && npm run build:server && node prerender.cjs",
    "preview": "vite preview",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "predeploy": "vite build --base=/local-microblogging-client/",
    "deploy": "gh-pages -d dist",
    "release": "standard-version",
    "lint": "eslint --ext .tsx,.jsx,.js,.ts src/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pure-js/local-microblogging-client.git"
  },
  "author": "pure-js",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pure-js/local-microblogging-client/issues"
  },
  "devDependencies": {
    "@types/jest": "^28.1.1",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "@vitejs/plugin-react": "^1.3.2",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.17.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "gh-pages": "^4.0.0",
    "jest": "^28.1.0",
    "msw": "^0.42.1",
    "postcss": "^8.4.14",
    "postcss-import": "^14.1.0",
    "postcss-loader": "^7.0.0",
    "sass": "^1.52.1",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.0.24",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3",
    "vite": "^2.9.12",
    "vite-plugin-pwa": "^0.12.0"
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "dexie": "^3.2.2",
    "dexie-react-hooks": "^1.1.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-router-dom": "^6.3.0"
  },
  "keywords": [
    "microblogging"
  ],
  "engines": {
    "node": ">=16.15",
    "npm": ">=8.5.5"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
